<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:elevation="3dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/productImageWishlist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/phonetest" />

    <TextView
        android:id="@+id/productTitleWishlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:maxLines="2"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productImageWishlist"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productPriceWishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rs.55,999/-"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/productTitleWishlist"
        app:layout_constraintTop_toBottomOf="@+id/productTitleWishlist" />

    <TextView
        android:id="@+id/cuttedPriceWishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rs.60,000/-"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/productPriceWishList"
        app:layout_constraintStart_toEndOf="@+id/productPriceWishList"
        app:layout_constraintTop_toTopOf="@+id/productPriceWishList"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/priceCut"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/cuttedPriceWishList"
        app:layout_constraintEnd_toEndOf="@+id/cuttedPriceWishList"
        app:layout_constraintStart_toStartOf="@+id/cuttedPriceWishList"
        app:layout_constraintTop_toTopOf="@+id/cuttedPriceWishList" />

    <TextView
        android:id="@+id/paymentsOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="COD availabe"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/productPriceWishList"
        app:layout_constraintTop_toBottomOf="@+id/productPriceWishList" />

    <ImageView
        android:id="@+id/deleteItemWL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:padding="8dp"
        android:tint="#9B000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cuttedPriceWishList"
        app:srcCompat="@drawable/delete" />
</androidx.constraintlayout.widget.ConstraintLayout>